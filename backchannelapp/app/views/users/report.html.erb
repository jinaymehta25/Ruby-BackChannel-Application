<%title "Report"%>
<table>
  <tr>
    <th>User</th>
    <th>Total Posts Posted</th>
    <th>Total Votes on his Posts</th>
    <th>Total Comments on his Posts</th>
    <th>Total Votes on his Comments </th>
    <th>Total Posts voted</th>
    <th>Total Posts commented</th>
    <th>Total Comments Voted</th>
    <th></th>
    <th></th>
  </tr>

    <% @users.each do |user| %>
        <tr>
           <td><%= user.username %></td>
           <td><%= user_get_posts(user.id) %></td>
           <td><%= user_get_votes_posts(user.id) %></td>
           <td><%= user_get_comments_post(user.id) %></td>
           <td><%= user_get_comments_votes(user.id) %></td>
           <td><%= user_post_voted(user.id) %></td>
           <td><%= user_total_comments(user.id) %></td>
           <td><%= user_comments_voted(user.id) %></td>
           <td></td>
        </tr>

    <% end %>

</table>
<%= link_to "Back", users_path %>